<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchField"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/cityName"
        android:layout_below="@+id/searchField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/searchField"
        android:layout_alignEnd="@+id/searchField"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:textAlignment="gravity" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/cityName"
        android:columnCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temp Min"
            android:id="@+id/textView"
            android:layout_below="@+id/searchField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tempMin0"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="right"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temp Max"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tempMax0"
            android:layout_below="@+id/tempMin0"
            android:layout_alignRight="@+id/tempMin0"
            android:layout_alignEnd="@+id/tempMin0"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="right"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weather"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/desc0"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/tempMax0"
            android:layout_alignStart="@+id/tempMax0"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="2"
            android:layout_column="1"
            android:gravity="right"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temp Min"
            android:id="@+id/textView5"
            android:layout_below="@+id/searchField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="3"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tempMin1"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignLeft="@+id/tempMax0"
            android:layout_alignStart="@+id/tempMax0"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="3"
            android:layout_column="1"
            android:gravity="right"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Temp Max"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tempMax1"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="4"
            android:layout_column="1"
            android:gravity="right"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Weather"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_row="5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/desc1"
            android:layout_below="@+id/tempMin0"
            android:layout_alignRight="@+id/tempMin0"
            android:layout_alignEnd="@+id/tempMin0"
            android:layout_alignParentRight="true"
            android:minWidth="100dp"
            android:textAlignment="gravity"
            android:layout_row="5"
            android:layout_column="1"
            android:gravity="right"
            android:layout_gravity="right" />
    </GridLayout>

</RelativeLayout>
